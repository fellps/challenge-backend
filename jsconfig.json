{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@database": ["src/database"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@middlewares/*": ["src/middlewares/*"],
    },
  },
  "exclude": ["node_modules"]
}